<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.alessandrycruz.dummypdfviewer.pdf.PdfActivity">

    <ImageView
        android:id="@+id/image_view_pdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter" />

    <ProgressBar
        android:id="@+id/progress_bar_pdf"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/button_previous_pdf"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickPrevious"
        android:text="PREVIOUS"
        android:textColor="@android:color/darker_gray" />

    <Button
        android:id="@+id/button_next_pdf"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onClickNext"
        android:text="NEXT"
        android:textColor="@android:color/black" />

</RelativeLayout>